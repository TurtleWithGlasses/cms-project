# Docker Environment Configuration for CMS Application
# Copy this file to .env and update with your values

# Application Configuration
APP_NAME=CMS API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
APP_PORT=8000

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string

# Database Configuration (PostgreSQL)
DATABASE_USER=cms_user
DATABASE_PASSWORD=cms_password
DATABASE_NAME=cms_db
DATABASE_PORT=5432
DATABASE_URL=postgresql+asyncpg://cms_user:cms_password@db:5432/cms_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=redis_password
REDIS_URL=redis://default:redis_password@redis:6379/0
SESSION_EXPIRE_SECONDS=3600

# Token Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_HOSTS=*
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# PgAdmin Configuration (optional, for database management)
PGADMIN_EMAIL=admin@cms.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Email Configuration (for password reset and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@cms-project.com
APP_URL=http://localhost:8000

# Optional: Production overrides
# ENVIRONMENT=production
# DEBUG=False
# WORKERS=4
